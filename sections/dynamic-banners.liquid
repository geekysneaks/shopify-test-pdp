{% comment %}
  Dynamic Banner Section - Pulls from Product Metafields
{% endcomment %}

<style>
  .dynamic-banner-container {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }
  .dynamic-banner {
    width: 100%;
    margin-bottom: 4rem;
    border-radius: 20px;
    overflow: hidden;
    background: #000; /* Default black background matching the split layout */
  }
  
  /* Split Layout (Image Left, Text Right) */
  .dynamic-banner--split {
    display: flex;
    align-items: center;
    color: #fff;
    min-height: 500px;
  }
  .dynamic-banner--split .dynamic-banner__image-wrapper {
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
  .dynamic-banner--split .dynamic-banner__image {
    width: 100%;
    height: auto;
    object-fit: contain;
    max-height: 400px;
  }
  .dynamic-banner--split .dynamic-banner__content {
    flex: 1;
    padding: 4rem 6rem;
    text-align: left;
  }
  .dynamic-banner--split .dynamic-banner__heading {
    font-size: 5.6rem;
    line-height: 1;
    margin-bottom: 2rem;
    text-transform: none;
    font-weight: 700;
  }
  .dynamic-banner--split .dynamic-banner__text {
    font-size: 1.8rem;
    line-height: 1.4;
    max-width: 500px;
  }

  /* Full Width Layout (Image only) */
  .dynamic-banner--full {
    background: transparent;
  }
  .dynamic-banner--full .dynamic-banner__image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    border-radius: 20px;
  }
  .dynamic-banner--full .dynamic-banner__content {
    display: none;
  }

  @media screen and (max-width: 989px) {
    .dynamic-banner--split {
      flex-direction: column;
      text-align: center;
      min-height: auto;
    }
    .dynamic-banner--split .dynamic-banner__content {
       text-align: center;
       padding: 4rem 2rem;
    }
    .dynamic-banner--split .dynamic-banner__heading {
      font-size: 3.6rem;
    }
    .dynamic-banner--split .dynamic-banner__image-wrapper {
        padding: 2rem;
    }
  }
</style>

<div class="dynamic-banner-container page-width">
  {%- for block in section.blocks -%}
    {%- liquid
      assign index = forloop.index
      assign img_key = 'banner_image_' | append: index
      assign head_key = 'banner_heading_' | append: index
      assign body_key = 'banner_text_' | append: index
      
      assign banner_image = product.metafields.custom[img_key].value
      assign banner_heading = product.metafields.custom[head_key].value
      assign banner_text = product.metafields.custom[body_key].value
      
      assign layout_type = 'full'
      if banner_heading != blank or banner_text != blank
        assign layout_type = 'split'
      endif
    -%}
    
    {%- if banner_image != blank -%}
      <div class="dynamic-banner dynamic-banner--{{ layout_type }}" {{ block.shopify_attributes }}>
        <div class="dynamic-banner__image-wrapper">
          <img src="{{ banner_image | image_url: width: 2400 }}" 
               alt="{{ banner_heading | default: product.title }}" 
               class="dynamic-banner__image" 
               loading="lazy">
        </div>
        
        {%- if layout_type == 'split' -%}
          <div class="dynamic-banner__content">
            {%- if banner_heading != blank -%}
              <h2 class="dynamic-banner__heading">{{ banner_heading }}</h2>
            {%- endif -%}
            {%- if banner_text != blank -%}
              <p class="dynamic-banner__text">{{ banner_text }}</p>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "Dynamic Metafield Banners",
  "tag": "section",
  "class": "section",
  "max_blocks": 3,
  "settings": [],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner Instance",
      "settings": [
        {
          "type": "paragraph",
          "content": "This block will display content from the product's banner metafields (image, heading, text) for this index (1, 2, or 3)."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dynamic Metafield Banners",
      "blocks": [
        { "type": "banner" },
        { "type": "banner" },
        { "type": "banner" }
      ]
    }
  ]
}
{% endschema %}
