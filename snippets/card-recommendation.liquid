{% comment %}
    Simplified product card for recommendations
{% endcomment %}
<div class="card-recommendation">
  <div class="card-recommendation__image-container">
    {%- if card_product.featured_media -%}
      <div class="media media--transparent ratio" style="--ratio-percent: 100%;">
        <img
          src="{{ card_product.featured_media | image_url: width: 200 }}"
          alt="{{ card_product.featured_media.alt | escape }}"
          loading="lazy"
          class="motion-reduce"
          width="100"
          height="100"
        >
      </div>
    {%- endif -%}
  </div>
  
  <div class="card-recommendation__info">
    <h3 class="card-recommendation__title">
      <a href="{{ card_product.url }}" class="full-unstyled-link">
        {{ card_product.title | escape }}
      </a>
    </h3>
    <p class="card-recommendation__subtitle">{{ card_product.metafields.descriptors.subtitle.value | default: card_product.vendor }}</p>
    <div class="card-recommendation__price-row">
       {% render 'price', product: card_product %}
    </div>
  </div>

  <div class="card-recommendation__action">
    <product-form data-section-id="{{ section_id }}">
      {%- form 'product', card_product, id: id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
        <input type="hidden" name="id" value="{{ card_product.selected_or_first_available_variant.id }}">
        <button
          type="submit"
          name="add"
          class="card-recommendation__add-button"
          aria-label="Add to cart"
        >
          <span>+</span>
        </button>
      {%- endform -%}
    </product-form>
  </div>
</div>
